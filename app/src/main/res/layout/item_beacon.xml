<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/beacon_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="UUIDUUID" />
        <TextView
            android:id="@+id/beacon_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="MAJOR" />
        <TextView
            android:id="@+id/beacon_minor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="MINOR" />
        <TextView
            android:id="@+id/beacon_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="ACCURACY" />
        <TextView
            android:id="@+id/beacon_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="RSSI" />
        <TextView
            android:id="@+id/beacon_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="DISTANCE" />
    </LinearLayout>

</android.support.v7.widget.CardView>