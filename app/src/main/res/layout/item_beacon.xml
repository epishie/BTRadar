<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="2dp"
    card:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/beacon_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            android:layout_marginEnd="@dimen/margin_horizontal_default"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="UUID" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_major" />
                <TextView
                    android:id="@+id/beacon_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="0" />
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_minor" />
                <TextView
                    android:id="@+id/beacon_minor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="0" />
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_tx_power" />
                <TextView
                    android:id="@+id/beacon_tx_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="0" />
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_rssi" />
                <TextView
                    android:id="@+id/beacon_rssi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="0" />
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_distance" />
                <TextView
                    android:id="@+id/beacon_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="@string/lbl_unknown" />
            </TableRow>
            <TableRow
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/lbl_proximity" />
                <TextView
                    android:id="@+id/beacon_proximity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_horizontal_default"
                    android:layout_marginEnd="@dimen/margin_horizontal_default"
                    android:textSize="14sp"
                    tools:text="0" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>